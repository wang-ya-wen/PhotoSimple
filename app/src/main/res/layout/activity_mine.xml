<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 顶部菜单图标 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <!-- 左侧菜单图标 -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/caidan"
            android:contentDescription="菜单"/>

        <!-- 右侧问号图标 -->
        <ImageView
            android:id="@+id/ivHelp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/help"
            android:contentDescription="帮助"/>
    </LinearLayout>

    <!-- 登录入口区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- 头像（点击可登录） -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/personal"
            android:contentDescription="点击登录"/>

        <!-- 立即登录文字 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即登录"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- 登录提示 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录查看更多互动消息"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 作品集区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- 作品集标题 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作品集"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_lock"
                android:layout_marginStart="8dp"
                android:contentDescription="锁定"/>
        </LinearLayout>

        <!-- 下划线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="12dp"/>

        <!-- 空状态提示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无作品集"
                android:textSize="16sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvCreateWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去创作作品吧 >"
                android:textSize="14sp"
                android:textColor="#3377FF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        android:paddingBottom="10dp"
        android:background="#FFFFFF"/>

</LinearLayout>